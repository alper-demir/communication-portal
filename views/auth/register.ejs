<!DOCTYPE html>
<html lang="en">

<%- include('../partials/head') %>

    <body>
        <%- include('../partials/navbar') %>
            <div class="h-[80vh]">
                <div class="flex items-center justify-center h-full ">
                    <form action="" method="post" class="p-10 bg-slate-300 rounded">

                        <div class="relative my-2">
                            <input type="text" class="px-2 py-2 peer w-64 outline-cyan-600 border-2 rounded" name="name"
                                placeholder="Name"
                                value="<% if (typeof name != "undefined") { %><%= name %><% } %>">

                        </div>

                        <div class="relative my-2">
                            <input type="text" class="px-2 py-2 peer w-64 outline-cyan-600 border-2 rounded"
                                name="lastname" placeholder="Last Name"
                                value="<% if (typeof lastname != "undefined") { %><%= lastname %><% } %>">

                        </div>

                        <div class="relative my-2">
                            <input type="text" class="px-2 py-2 peer w-64 outline-cyan-600 border-2 rounded"
                                name="email" placeholder="Email"
                                value="<% if (typeof email != "undefined") { %><%= email %><% } %>">

                        </div>

                        <div class="relative my-2">
                            <input type="password" class="px-2 py-2 peer w-64 outline-cyan-600 border-2 rounded"
                                name="password" placeholder="Password"
                                value="<% if (typeof password != "undefined") { %><%= password %><% } %>">

                        </div>

                        <div class="mt-3 text-right w-64">
                            <button type="submit" class="px-3 py-1 bg-cyan-800 text-white rounded">Register</button>
                        </div>
                        <div class="text-center mt-2">
                            <% if (typeof message !="undefined" ) { %>
                                <p>
                                    <%= message.text %>
                                </p>
                                <% } %>
                        </div>

                    </form>
                </div>

            </div>
                <%- include('../partials/footer') %>
    </body>

</html>